<div data-role="page">

    <div data-role="header" data-theme="b">
    <h1>Facility Assessment</h1>
    <a href="<%=Rho::RhoConfig.start_path%>" data-icon="home" data-iconpos="notext" data-direction="reverse" class="ui-btn-right jqm-home">Home</a>
    </div><!-- /header -->

    <div data-role="content">
      <div class="content-primary">
        <ul data-role="listview">
          <li data-role="list-divider">Facilities<span class="ui-li-count"><%=@facilities.length%></span></li>
          <% @facilities.each do |facility| %>
            <li>
              <%if facility.offline_client_id.nil? || facility.offline_client_id.empty? || (facility.offline_client_id == System::get_property('phone_id')) || (Rho::RhoConfig.facility_debug.to_i == 1)%>
                <%unless facility.attribute_changed?('offline_client_id')  %>
                         <a href="<%=url_for :action => :show, :id => facility.object%>">
                           <h3><%= facility.code%></h3>
                           <p><strong><%= facility.name%></strong></p>
                           <p><%= facility.facility_type_text%></p>
                           <p class="ui-li-aside">
                             <%if facility.offline_client_id.nil? || facility.offline_client_id.empty? %>
                               <img src="/public/images/download-database.png" width="32"/>
                             <%else%>
                               <%if facility.changed?%>
                                <img src="/public/images/alert2.png" widtth="16"/>
                               <%end%>
                             <%end%>
                           </p>
                         </a>
                 <%else%>
                      <h3><%= facility.code%></h3>
                      <p><strong><%= facility.name%></strong></p>
                      <p class="ui-li-aside">
                        <strong style="color:red;">Sync Required</strong>
                        <img src="/public/images/warning_icon.png" width="32"/>
                      </p>

                 <%end%>
              <%else%>
                <h3><%= facility.code%></h3>
                <p><strong><%= facility.name%></strong></p>
                <p><%= facility.facility_type_text%></p>
                <p class="ui-li-aside">
                  <img src="/public/images/stop.png" width="32"/>
                </p>
              <%end%>
            </li>
          <%end%>
        </ul>
    </div>
  </div><!-- /ui-body wrapper -->

</div><!-- /page -->
