<div data-role="page" class="type-index" id='owner_information_index_page'>

  <div data-role="header" data-theme="b">
    <h1><%= @src.erf_number%></h1>
    <a href="<%=url_for :controller=>:AssetInformation,:action=>:edit,:id=>@params['asset_information_id']%>" data-direction="reverse" data-icon="back">Back</a>
    <a href="<%=Rho::RhoConfig.start_path%>" data-icon="home" data-iconpos="notext" data-direction="reverse" class="ui-btn-right jqm-home">Home</a>
  </div><!-- /header -->

  <div data-role="content" >
      <div class="content-primary">
        <ul data-role="listview">
          <li data-role="list-divider">Owners Information<span class="ui-li-count"><%=@owner_informations.length%></span></li>
            <% @owner_informations.each do |owner_information| %>
              <li>
                <a href="<%=url_for :controller=>:OwnerInformation,:action=>:edit,:id=>owner_information.object%>">
                  <p><strong><%= owner_information.registration_date%> <%= owner_information.owner_status_text%></strong></p>
                  <p><%=Rho::NumberHelper::number_to_currency(owner_information.sale_price)%> <%=owner_information.owner_name%></p>
               </a>
              </li>
          <% end %>
         </ul>
       </div>
  </div><!-- /ui-body wrapper -->

  <div data-role="footer" data-theme="b">
     <a href="<%=url_for :controller=>:OwnerInformation,:action=>:new,:query=>{:asset_information_id=>@params['asset_information_id']}%>" data-icon="add">Add</a>
  </div><!-- /header -->

</div>