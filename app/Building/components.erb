<div data-role="page" class="type-interior" >

  <div data-role="header" data-theme="b">
    <h1><%=@building.facility.code%></h1>
    <a href="<%=url_for :controller=>:Building,:action=>:index,:query=>{:facility_id=>@building.facility.object}%>" data-icon="back">Back</a>
    <a href="<%=Rho::RhoConfig.start_path%>" data-icon="home" data-iconpos="notext" data-direction="reverse" class="ui-btn-right jqm-home">Home</a>
    <%=render :partial=>'Facility/navbar', :locals=>{:facility=>@building.facility,:tab_index=>2} %>
    <h3><%=@building.building_no%> <%=@building.name%></h3>
    <%=render :partial=>'navbar', :locals=>{:tab_index=>@params['t']=='BuildingConstruction' ? 2 :(@params['t']=='BuildingMechanicalEquipment' ? 3 : 4)} %>
  </div><!-- /header -->

  <div data-role="content" >
    <div class="content-primary">
        <% @components.each do |component| %>
             <%= render :partial=>'Component/form' ,:locals=>{:component=>component} %>
        <% end %>
     </div>
  </div><!-- /ui-body wrapper -->

</div><!-- /page -->

