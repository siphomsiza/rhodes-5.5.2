<div data-role="page">
  <div data-role="header" data-theme="b">
    <a href="<%=url_for :controller=>:Endorsement,:action=>:index,:query=>{:asset_information_id=>@endorsement.asset_information_id}%>" data-icon="back">Return</a>
    <h3>Endorsement</h3>
    <a href="<%=Rho::RhoConfig.start_path%>" data-ajax="false" data-icon="home" data-iconpos="notext" class="ui-btn-right jqm-home">Home</a>
  </div>

  <div data-role="content" >
    <div data-role="collapsible" data-collapsed="false">
      <h3><%=@endorsement.new_record? ? 'New Endorsement' : @endorsement.endorse_no %></h3>
      <form method="POST" action="<%=@endorsement.new_record? ? url_for(:controller=>:Endorsement,:action=>:create) : url_for(:controller=>:Endorsement,:action=>:update,:id=>@endorsement.object)%>" data-ajax="false">

        <label for="endorse_no">Legal Endorsement:<%=show_error(@endorsement.errors,:endorse_no)%></label>
        <input type="text" id="endorse_no" name="endorsement[endorse_no]" value="<%=@endorsement.endorse_no%>">

        <label for="holder">Holder:<%=show_error(@endorsement.errors,:holder)%></label>
        <input type="text" id="holder" name="endorsement[holder]" value="<%=@endorsement.holder%>">

        <label for="amount">Amount (<%=LocalizationSimplified::NumberHelper::CurrencyOptions[:unit]%>):<%=show_error(@endorsement.errors,:amount)%></label>
        <input type="number" id="amount" name="endorsement[amount]" value="<%=@endorsement.amount%>">

        <label for="description">Description:</label>
        <input type="text" id="description" name="endorsement[description]" value="<%=@endorsement.description%>">

        <input type="hidden" name="endorsement[asset_information_id]" value="<%=@endorsement.asset_information_id%>"/>

        <input type="submit" name="commit" value="Save" data-inline="true"/>
        <%unless @endorsement.new_record?%>
          <a href="<%=url_for :controller=>:Endorsement,:action=>:delete,:id=>@endorsement.object%>" data-role="button" data-inline="true">Delete</a>
        <%end%>
      </form>

    </div>

  </div>
</div>

